{
    "manifest_version": 2,
    "name": "Thunderbird Settings Extension",
    "version": "1.0",
    "description": "An extension to add a Settings button with a popup",
    "applications": {
        "gecko": {
            "id": "settings-extension@example.com"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Settings"
    },
    "permissions": [
        "storage"
    ]
}